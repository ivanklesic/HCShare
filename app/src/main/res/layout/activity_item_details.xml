<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E95DD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_details_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/item_details_one"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/item_details_two"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/item_details_one"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/item_details_three"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/item_details_two"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/item_details_four"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/item_details_three"
                android:src="@drawable/ic_star_empty" />

            <ImageView
                android:id="@+id/item_details_five"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@id/item_details_four"
                android:src="@drawable/ic_star_empty" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/item_details_image"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="10dp"
            android:background="#ffffff" />

        <Button
            android:id="@+id/item_details_chat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#003E5F"
            android:text="@string/chat_with_author_button"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/item_details_buy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:background="#003E5F"
            android:text="@string/buy_button"
            android:textColor="#ffffff" />

    </LinearLayout>

</ScrollView>